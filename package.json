{
  "name": "numflux",
  "version": "0.1.0",
  "description": "Framework-agnostic numpad logic and lightweight UI helpers.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "css:types": "typed-css-modules src/styles --outDir src/types --camelCase --exportType default",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "numpad",
    "keyboard",
    "input",
    "typescript",
    "framework-agnostic"
  ],
  "author": {
    "name": "Denise Broekman",
    "company": "CitoLab"
  },
  "license": "GPLv3",
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/html-vite": "^8.6.14",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.1.1",
    "storybook": "^8.6.14",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@types/css-modules": "^1.0.5"
  }
}
